@page
@model PrizeTracker.Pages.Tournaments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 style="margin: 2%;">Edit</h1>

<h4 style="margin: 2%;">Tournament</h4>
<hr />
<div class="row" style="margin: 2%;">
    <div class="col-sm-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tournament.ID" />
            <div class="form-group">
                <label asp-for="Tournament.TournamentName" class="control-label"></label>
                <input asp-for="Tournament.TournamentName" class="form-control" />
                <span asp-validation-for="Tournament.TournamentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.StartDate" class="control-label"></label>
                <input asp-for="Tournament.StartDate" class="form-control" />
                <span asp-validation-for="Tournament.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.EndDate" class="control-label"></label>
                <input asp-for="Tournament.EndDate" class="form-control" />
                <span asp-validation-for="Tournament.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.PrizePool" class="control-label"></label>
                <input asp-for="Tournament.PrizePool" class="form-control" />
                <span asp-validation-for="Tournament.PrizePool" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.NumberOfPlayers" class="control-label"></label>
                <input asp-for="Tournament.NumberOfPlayers" class="form-control" />
                <span asp-validation-for="Tournament.NumberOfPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.Location" class="control-label"></label>
                <input asp-for="Tournament.Location" class="form-control" />
                <span asp-validation-for="Tournament.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.Winner" class="control-label"></label>
                <input asp-for="Tournament.Winner" class="form-control" />
                <span asp-validation-for="Tournament.Winner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.RunnerUp" class="control-label"></label>
                <input asp-for="Tournament.RunnerUp" class="form-control" />
                <span asp-validation-for="Tournament.RunnerUp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="margin: 2%;" asp-page="./Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
